# ALENYA - Variables de Entorno
# Copia este archivo como .env y configura tus valores

# Configuración de la aplicación
DEBUG=False
PORT=5000
HOST=0.0.0.0

# Configuración de ALENYA
ALENYA_VERSION=3.0.0
COMPANY_NAME=MELANO INC
AGENT_NAME=ALENYA

# Base de datos (opcional - para futuras versiones)
# DATABASE_URL=sqlite:///alenya.db

# APIs externas (opcional)
# OPENAI_API_KEY=tu_clave_aqui
# ANTHROPIC_API_KEY=tu_clave_aqui

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=alenya.log

# Configuración de seguridad
SECRET_KEY=alenya-super-secret-key-change-in-production
CORS_ORIGINS=*

# Configuración de deployment
DEPLOYMENT_ENV=development
# DEPLOYMENT_ENV=production

# Configuración de monitoreo
ENABLE_METRICS=True
ENABLE_ANALYTICS=True
